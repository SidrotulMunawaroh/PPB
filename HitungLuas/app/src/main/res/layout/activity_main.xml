<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/shapeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:entries="@array/shapes"
        android:prompt="@string/choose_shape"/>

    <EditText
        android:id="@+id/dimension1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dimension1_hint"
        android:inputType="numberDecimal"
        android:layout_below="@id/shapeSpinner"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/dimension2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dimension2_hint"
        android:inputType="numberDecimal"
        android:layout_below="@id/dimension1EditText"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:layout_below="@id/dimension2EditText"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculateButton"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="24dp"/>

</RelativeLayout>
